{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/root-service/src",
  "monorepo": true,
  "root": "apps/root-service",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/root-service/tsconfig.app.json"
  },
  "projects": {
    "root-service": {
      "type": "application",
      "root": "apps/root-service",
      "entryFile": "main",
      "sourceRoot": "apps/root-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/root-service/tsconfig.app.json"
      }
    },
    "service-1": {
      "type": "application",
      "root": "apps/service-1",
      "entryFile": "main",
      "sourceRoot": "apps/service-1/src",
      "compilerOptions": {
        "tsConfigPath": "apps/service-1/tsconfig.app.json"
      }
    },
    "bootstrap": {
      "type": "library",
      "root": "libs/bootstrap",
      "entryFile": "index",
      "sourceRoot": "libs/bootstrap/src",
      "compilerOptions": {
        "tsConfigPath": "libs/bootstrap/tsconfig.lib.json"
      }
    }
  }
}